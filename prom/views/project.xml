<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record model="ir.ui.view" id="base.view_company_form_add_nds">
        <field name="name">res.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@id='company_currency']" position="after">
                <field name="nds"/>
                <field name="is_own"/>
                <field name="is_rf"/>
                <field name="nds_type"/>
                <field name="activity"/>
            </xpath>

        </field>
    </record>

    <record id="project_view_form" model="ir.ui.view">
        <field name="name">prom.project.form</field>
        <field name="model">prom.project</field>
        <field name="arch" type="xml">
            <form string="project" create="false">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>

                    <group>
                        <field name="name"/>
                        <field name="manager_user_id" context="{'default'}"/>
                        <field name="customer_company_id"/>
                        <field name="contractor_company_id"/>
                        <field name="parent_project_id" readonly="1"/>
                        <field name="kind_podryad" readonly="1"/>
                    </group>
                    <group string="ед.ч.">
                        <field name="passport_ids" nolabel="1" context="{'tree_view_ref' : 'prom.passport_view_tree_min'}" />
                    </group>

                    <group string="Подрядчики.">
                        <field name="sub_project_ids" options="{'no_create': True}" nolabel="1" context="{'default_parent_project_id':id}" domain="[('id','=','-1')" />
                    </group>
                    
                    <button type="object" string="add_sub_project_ids" name="add_sub_project_ids" class='btn btn-primary btn-sm o_list_button_add' />
                </sheet>
                <sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_view_tree" model="ir.ui.view">
        <field name="name">prom.project.tree</field>
        <field name="model">prom.project</field>
        <field name="arch" type="xml">
            <tree string="project" create="false">
                <field name="name"/>
                <field name="manager_user_id"/>

                <field name="customer_company_id"/>
                <field name="contractor_company_id"/>
                <field name="kind_podryad"/>

                <field name="parent_project_id"/>
                <field name="state"/>
                <field name="passport_ids"/>

            </tree>
        </field>
    </record>


    <record id="project_action_form" model="ir.actions.act_window">
        <field name="name">project</field>
        <field name="res_model">prom.project</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>