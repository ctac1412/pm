<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="obligation_view_form" model="ir.ui.view">
        <field name="name">prom.obligation.form</field>
        <field name="model">prom.obligation</field>
        <field name="arch" type="xml">
            <form string="product">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="passport_id"/>
                        <field name="currency_id"/>
                        <field name="price"/>
                        <field name="persent"/>
                        <field name="unit"/>
                        <field name="count"/>
                        <field name="obligation_type_id"/>
                        <field name="compute_mode"/>

                        
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="obligation_view_tree" model="ir.ui.view">
        <field name="name">prom.obligation.tree</field>
        <field name="model">prom.obligation</field>
        <field name="arch" type="xml">
            <tree string="product">
                        <field name="name"/>
                        
                        <field name="passport_id"/>
                        <field name="currency_id"/>
                        <field name="price"/>
                        <field name="persent"/>
                        <field name="unit"/>
                        <field name="count"/>
                        <field name="obligation_type_id"/>
                        <field name="compute_mode"/>
            </tree>
        </field>
    </record>


   <record id="finn_obligation_view_form" model="ir.ui.view">
        <field name="name">prom.finn_obligation.form</field>
        <field name="model">prom.finn_obligation</field>
        <field name="arch" type="xml">
            <form string="product">
                <sheet>
                    <group>
                        <field name="name"/>
                        
                        <field name="currency_id"/>
                        <field name="price"/>
                        <field name="persent"/>
                        <field name="unit"/>
                        <field name="count"/>
                        <field name="finn_transaction_id"/>
                        <field name="compute_mode"/>

                        
                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="finn_obligation_view_tree" model="ir.ui.view">
        <field name="name">prom.finn_obligation.tree</field>
        <field name="model">prom.finn_obligation</field>
        <field name="arch" type="xml">
            <tree string="product">
                        <field name="name"/>
                     
                        <field name="currency_id"/>
                        <field name="price"/>
                        <field name="persent"/>
                        <field name="unit"/>
                        <field name="count"/>
                        <field name="finn_transaction_id"/>
                        <field name="compute_mode"/>
            </tree>
        </field>
    </record>

    <record id="obligation_action_form" model="ir.actions.act_window">
        <field name="name">obligation</field>
        <field name="res_model">prom.obligation</field>
        <field name="view_mode">tree,form</field>
    </record> 

    <record id="finn_obligation_action_form" model="ir.actions.act_window">
        <field name="name">finn_obligation</field>
        <field name="res_model">prom.finn_obligation</field>
        <field name="view_mode">tree,form</field>
    </record> 
</odoo>