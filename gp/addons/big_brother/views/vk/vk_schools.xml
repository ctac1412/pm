<odoo>
    <data>
        <record id="view_vk_schools_form" model="ir.ui.view">
            <field name="name">big_brother.vk_schools.form</field>
            <field name="model">big_brother.vk_schools</field>
            <field name="arch" type="xml">
                <form string="Школа ВК">
                    <sheet>
                        <group>
                            <field name="vk_id"/>
                            <field name="country"/>
                            <field name="city"/>
                            <field name="name"/>
                            <field name="year_from"/>
                            <field name="year_to"/>
                            <field name="year_graduated"/>
                            <field name="class_name"/>
                            <field name="speciality"/>
                            <field name="type_str"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_vk_schools_tree" model="ir.ui.view">
            <field name="name">big_brother.vk_schools.tree</field>
            <field name="model">big_brother.vk_schools</field>
            <field name="arch" type="xml">
                <tree string="Школа ВК">
                    <!-- <field name="vk_id"/> -->
                    <!-- <field name="country"/> -->
                    <!-- <field name="city"/> -->
                    <field name="name"/>
                    <field name="year_from"/>
                    <field name="year_to"/>
                    <field name="year_graduated"/>
                    <field name="class_name"/>
                    <field name="speciality"/>
                    <field name="type_str"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_vk_schools_view">
            <field name="name">Школа ВК</field>
            <field name="res_model">big_brother.vk_schools</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
