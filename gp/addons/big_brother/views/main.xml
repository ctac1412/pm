<odoo>
    <data>
    
        <record id="view_main_form" model="ir.ui.view">
            <field name="name">big_brother.main.form</field>
            <field name="model">big_brother.main</field>
            <field name="arch" type="xml">
                <form string="">
                    <header>
                    </header>
                    <sheet>
                        <button name='vk_update_data' string='Обновить ВК' type='object' class='oe_link'/>
                        <group>
                            <field name="name"/>
                            <field name="vk_id"/>
                            <field name="vk_photo_max_orig"/>
                            <field name="vk_online"/>
                            <!-- <field name="vk_lists"/> -->
                            <field name="vk_domain"/>
                            <!-- <field name="vk_has_mobile"/> -->
                            <field name="vk_mobile_phone"/>
                            <field name="vk_home_phone"/>
                            <field name="vk_site"/>
                            <field name="vk_education"/>
                            <field name="vk_universities_ids"/>
                            <field name="vk_schools_ids"/>
                            <field name="vk_status"/>
                            <field name="vk_followers_count"/>
                            <field name="vk_nickname"/>
                            <field name="vk_relatives"/>
                            <field name="vk_relation"/>
                            <field name="vk_political"/>
                            <field name="vk_langs"/>
                            <field name="vk_religion"/>
                            <field name="vk_inspired_by"/>
                            <field name="vk_people_main"/>
                            <field name="vk_life_main"/>
                            <field name="vk_smoking"/>
                            <field name="vk_alcohol"/>
                            <field name="vk_connections"/>
                            <field name="vk_exports"/>
                            <field name="vk_wall_comments"/>
                            <field name="vk_activities"/>
                            <field name="vk_interests"/>
                            <field name="vk_music"/>
                            <field name="vk_movies"/>
                            <field name="vk_tv"/>
                            <field name="vk_books"/>
                            <field name="vk_games"/>
                            <field name="vk_about"/>
                            <field name="vk_quotes"/>
                            <field name="vk_can_post"/>
                            <field name="vk_can_see_all_posts"/>
                            <field name="vk_can_see_audio"/>
                            <field name="vk_can_write_private_message"/>
                            <field name="vk_can_send_friend_request"/>
                            <field name="vk_screen_name"/>
                            <field name="vk_maiden_name"/>
                            <field name="vk_is_friend"/>
                            <field name="vk_career"/>
                            <field name="vk_military_ids"/>
                            <field name="vk_occupation"/>
                            <field name="vk_occupation_name"/>
                            <field name="vk_occupation_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_main_tree" model="ir.ui.view">
            <field name="name">big_brother.main.tree</field>
            <field name="model">big_brother.main</field>
            <field name="arch" type="xml">
                <tree string="">
                     <field name="name"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_main_view">
            <field name="name">Базовая модель</field>
            <field name="res_model">big_brother.main</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
